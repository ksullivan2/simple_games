<StrategoGame>:
    id: game


    BoxLayout:
        GameBoard:
            id: board
            size_hint_x:10

        SideBoard:
            id: sidebar
            size_hint_x: 4

        BoxLayout:
            id: debug
            #change window size back to 1000 when you delete this
            size_hint_x: 2
            orientation: "vertical"

            Button:
                id: newgame
                text: "start new game"
                on_press: game.eventsobject.start_game_button_press()

            Button:
                text: "place all pieces"
                on_press: game.quick_place_pieces()

            Button:
                text: "gamestate 1"
                on_press: game.gamestate = 1


<Popup>:
    size_hint: None, None
    size: (1000,500)
    title: "STRATEGO"
    title_align: "center"
    auto_dismiss: False
    instructions: "dummy"
    startbuttontext: "dummy"
    buttonpress: print("needs to be overwritten")

    BoxLayout:
        orientation: "vertical"
        Label:
            id: instructions
            size_hint_y: 2
            text: root.instructions
        Button:
            id: startbutton
            text: root.startbuttontext
            on_press: root.buttonpress()



<Square>:
    background_normal: self.get_background_image()
    background_disabled_normal: self.get_disabled_image()
    border: (0,0,0,0)
    on_press: self.parent.eventsobject.square_press(self)


<GamePiece>:
    id: gamepiece
    size_hint:(None, None)
    group: self.player_color
    border: (0,0,0,0)
    on_press: self.eventsobject.gamepiece_press(self)

    RelativeLayout:
        #orientation: "vertical"
        center: gamepiece.center
        on_size: self.size = gamepiece.size

        canvas:
            Color:
                rgb: 0,0,0
            Ellipse:
                size: (gamepiece.width/2.5, gamepiece.height/3)
                pos: -15, -20
        Label:
            id: number
            text: str(gamepiece.number)
            color: (1,1,1,1)
            font_size: gamepiece.height/4
            bold: True
            pos_hint: {"x": -.4, "y": -.45}








